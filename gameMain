from PyQt5.QtCore import Qt
from PyQt5.QtWidgets import QApplication, QWidget
from PyQt5.QtWidgets import QLayout, QGridLayout
from PyQt5.QtWidgets import QTextEdit, QLineEdit, QPushButton, QToolButton, QLabel, QSlider

class LadderGame(QWidget):

    def __init__(self, parent=None):
        super().__init__(parent)

        # Ladder display window
        self.LadderWindow = QTextEdit()
        self.LadderWindow.setReadOnly(True)
        self.LadderWindow.setAlignment(Qt.AlignLeft)
        font = self.LadderWindow.font()
        font.setFamily('Courier New')
        self.LadderWindow.setFont(font)

        # Layout
        LadderLayout = QGridLayout()
        LadderLayout.addWidget(self.LadderWindow, 0, 0)

        # Status Layout creation
        settingLayout = QGridLayout()

        # Display widget
        #Qslider Widget
        self.slider = QSlider(Qt.Horizontal, self)
        self.slider.setRange(0,10)
        self.slider.setSingleStep(1)
        self.label = QLabel('0',self)
        self.slider.valueChanged[int].connect(self.chagne_Value)
        settingLayout.addWidget(self.slider, 0,0,1,3)
        # QLabel, QLineEdit
        input = QLabel('입력창',self)
        settingLayout.addWidget(input,1,0)
        Num1 = QLineEdit('1:',self)
        settingLayout.addWidget(Num1,2,0)
        Num2 = QLineEdit('2:',self)
        settingLayout.addWidget(Num2, 3, 0)
        Num3 = QLineEdit('3:',self)
        settingLayout.addWidget(Num3, 4, 0)
        Num4 = QLineEdit('4:',self)
        settingLayout.addWidget(Num4, 5, 0)
        Num5 = QLineEdit('5:',self)
        settingLayout.addWidget(Num5, 6, 0)
        Num6 = QLineEdit('6:',self)
        settingLayout.addWidget(Num6, 7, 0)
        Num7 = QLineEdit('7:',self)
        settingLayout.addWidget(Num7, 8, 0)
        Num8 = QLineEdit('8:',self)
        settingLayout.addWidget(Num8, 9, 0)
        Num9 = QLineEdit('9:',self)
        settingLayout.addWidget(Num9, 10, 0)
        Num10 = QLineEdit('10:',self)
        settingLayout.addWidget(Num10, 11, 0)

        result = QLabel('결과값', self)
        settingLayout.addWidget(result,1,1)
        P1 = QLineEdit(self)
        settingLayout.addWidget(P1, 2,1)
        P2 = QLineEdit(self)
        settingLayout.addWidget(P2, 3, 1)
        P3 = QLineEdit(self)
        settingLayout.addWidget(P3, 4, 1)
        P4 = QLineEdit(self)
        settingLayout.addWidget(P4, 5, 1)
        P5 = QLineEdit(self)
        settingLayout.addWidget(P5, 6, 1)
        P6 = QLineEdit(self)
        settingLayout.addWidget(P6, 7, 1)
        P7 = QLineEdit(self)
        settingLayout.addWidget(P7, 8, 1)
        P8 = QLineEdit(self)
        settingLayout.addWidget(P8, 9, 1)
        P9 = QLineEdit(self)
        settingLayout.addWidget(P9, 10, 1)
        P10 = QLineEdit(self)
        settingLayout.addWidget(P10, 11, 1)

        #Create Button
        self.runButton = QToolButton()
        self.runButton.setText('Run')
        self.runButton.clicked.connect(self.startRun)
        settingLayout.addWidget(self.runButton, 12,0)
        # Layout Placement
        mainLayout = QGridLayout()
        mainLayout.setSizeConstraint(QLayout.SetFixedSize)
        mainLayout.addLayout(LadderLayout, 0, 0)
        mainLayout.addLayout(settingLayout, 0, 1)

        self.setLayout(mainLayout)
        self.setWindowTitle('Ladder Game')

    def ResetClicked(self):
        # 상태 초기화
        self.ladder = ladder()
        self.input = Input()

        self.LadderWindow.setText(self.ladder.drawcol, self.ladder.drawrow, self.ladder.followLine)
        self.PersonNumber.setText(self.Input.PersonNumber())
        self.ResultNumber.setText(self.Input.ResultNumber())
        self.Result.setText(self.Input.PersonName())

    def startRun(self):
        pass

    def chagne_Value(self, value):
        self.label.setText(str(value))
        self.label.adjustSize()
        self.label.repaint()


if __name__ == '__main__':
    import sys
    app = QApplication(sys.argv)
    game = LadderGame()
    game.show()
    sys.exit(app.exec_())
